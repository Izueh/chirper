[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/app
ExecStart=/usr/local/bin/gunicorn -b 0.0.0.0:8000 -w 4 app:app --error-logfile /home/ubuntu/log/gunicorn-error --capture-output --enable-stdio-inheritance -k eventlet --threads 4
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
