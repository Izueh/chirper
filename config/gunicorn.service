[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/app
ExecStart=/usr/local/bin/gunicorn -b 0.0.0.0:8000 -t 5 -w 2 app:app --access-logfile /home/ubuntu/log/gunicorn-access --error-logfile /home/ubuntu/log/gunicorn-error --capture-output --enable-stdio-inheritance
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
